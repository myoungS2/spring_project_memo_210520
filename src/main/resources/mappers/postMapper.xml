<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.memo.post.dao.PostDAO">
 	<select id="selectPostListByUserId" parameterType="int" resultType="com.memo.post.model.Post">
 		SELECT 
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 		WHERE <!-- 오늘의 error 2 : where -> wehre로 씀...ㅠ 진짜 와이라노  -->
 			`userId` = #{userId}
 	</select>
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO `post`
 		(
 			`userId` <!-- 오늘의 error 1 : 여기 앞에 , 있어서...어...업로드 안됐었음..나 환장하네.. -->
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{subject}
 			, #{content}
 			, #{imagePath} 
			, NOW() 			
			, NOW() 			
 		)
 	</insert>
 	<select id="selectPost" parameterType="int" resultType="com.memo.post.model.Post">
 		SELECT 
 			`id`
			,`userId`
			,`subject`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
 		FROM
 			`post`
 		WHERE 
 			`id` = #{id}
 	</select>
 	<update id="updatePost" parameterType="map">
 		UPDATE `post`
 		SET
 			`subject` = #{subject}
 			,`content` = #{content}
 			, `updatedAt` = NOW()
 			<!-- 동적쿼리(반복문도...있음..!)imagePath가 있을 때에만 수정한다. => if문 -->
 			<if test="imagePath != null"> <!-- el표현식 아니고 그냥 imagePath를 가져오면 됨 -->
 				,`imagePath` = #{imagePath}
 			</if>
 		WHERE
 			`id` = #{id}	
 	</update>
 </mapper>